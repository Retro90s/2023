{
  "extends": ["config:base"],
  "dependencyDashboard": false,
  "labels": ["renovate"],
  "automerge": false,
  "rangeStrategy": "bump",
  "timezone": "GMT",
  "schedule": ["before 10am on the first day of the month"],
  "packageRules": [
    {
      "groupName": "typescript",
      "labels": ["typescirpt"],
      "matchPackageNames": ["typescript"],
      "matchPackagePatterns": ["^@types"],
      "automerge": true
    }
  ]
}
